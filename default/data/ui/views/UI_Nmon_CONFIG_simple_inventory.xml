    <row>
        <panel>
            <table>
                <title>Full AIX Configuration</title>
                <search base="Global">
                    <query>search OStype="AIX" | stats
values(AIX_Machine_SerialNumber) As Machine_SerialNumber,
values(AIX_virtualcpus) As virtualcpus,
values(AIX_logicalcores) As logicalcores,
values(AIX_entitled) As entitled,
values(OStype) As OStype,
values(Processor) As Processor,
values(AIX_processor_mode) As processor_mode,
values(AIX_processor_clockspeed) As processor_clockspeed,
values(AIX_cpu_type) As cpu_type,
values(AIX_kernel_type) As kernel_type,
values(AIX_plateform_firmware_level) As plateform_firmware_level,
values(nmon_version) As nmon_version,
values(AIX_PoolID) As PoolID,
values(AIX_system_installed_CPUs) As system_installed_CPUs,
values(AIX_system_active_CPUs) As system_active_CPUs,
values(AIX_LEVEL) As os_version,
values(AIX_PoolCPUs) As PoolCPUs by hostname
| fillnull value=Undeterminated</query>
                </search>
            </table>
        </panel>
    </row>
