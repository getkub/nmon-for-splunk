    <panel id="process">
      <title>Virtual Memory statistics</title>
      <html>
        <!-- Placeholder/container for the link switcher to appear -->
        <div class="link-switcher" data-items="link1,link2,link3,link4,link5,link6">Select a view:<!--Links go here-->
